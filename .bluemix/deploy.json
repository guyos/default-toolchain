{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "dev-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "dev-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "dev-space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "mongo-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription3"
            },
            "type": "string",
            "pattern": "\\S",
            "maxLength": 63        
        },
        "func-auth": {
            "description": {
                "$ref": "#/messages/deploy.funcAuthDescription"
            },
            "type": "string"
        }
    },
    "required": [
        "dev-region",
        "dev-organization",
        "dev-space",
        "mongo-app-name",
        "func-auth"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName3"
            },
            "key": "mongo-app-name"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.funcAuth"
            },
            "key": "func-auth"
        },        
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "16%",
                "28%",
                "28%",
                "28%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                     "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/devStage"
                    }
                },
                {
                    "type": "select",
                    "key": "dev-region",
                    "readonly": true
                },
                {
                    "type": "select",
                    "key": "dev-organization"
                },
                {
                    "type": "select",
                    "key": "dev-space",
                    "readonly": false
                }
            ]
        }
    ]
}
